{% extends 'base.html.twig' %}

{% block title %}Händlerinformationen{% endblock %}

{% block headline %}
    <div class="text-center py-4">
        <h1 class="display-4">Details zu <span class="text-success">{{ supplier.name }}</span></h1>
        <p class="lead text-muted">Hier finden Sie alle Informationen zu diesem Händler.</p>
    </div>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="card mb-4">
            <div class="card-body">
                <h2 class="card-title">{{ supplier.name }}</h2>

                <p class="mb-1"><strong>Adresse:</strong> {{ supplier.address }}</p>
                <p class="mb-1"><strong>Email:</strong> {{ supplier.email }}</p>
{#                <p class="mb-1"><strong>Id:</strong> {{ supplier.id }}</p>#}
                <strong>Bücher:</strong>
                {% for x in supplier.books %}
                    <p class="mb-1"> {{ x.title }}</p>
                {% endfor %}
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a href="{{ path('app_supplier_edit', { id: supplier.id }) }}" class="btn btn-outline-warning">
                <i class="fa-solid fa-pen me-2"></i>
                Bearbeiten
            </a>
            <a href="{{ path('app_supplier_index') }}" class="btn btn-outline-secondary">
                <i class="fa-solid fa-arrow-left me-2"></i>
                Zurück zur Übersicht
            </a>
            <a href="{{ path('app_supplier_delete', { id: supplier.getId() }) }}" class="btn btn-outline-danger">
                <i class="fa-solid fa-trash me-2"></i>
                Löschen
            </a>
        </div>
    </div>
{% endblock %}

{% block javascript %}
<!-- Add any supplier-specific JavaScript here -->
{% endblock %}
