{% extends 'base.html.twig' %}

{% block title %}Händler Bearbeiten{% endblock %}

{% block headline %}
    <div class="text-center py-4">
        <h1 class="display-4">Händler <span class="text-success">Bearbeiten</span></h1>
        <p class="lead text-muted">Ändern Sie die Informationen dieses Händlers.</p>
    </div>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.name, 'Name', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.address, 'Adresse', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.address) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.email) }}
                </div>

                {{ form_end(form) }}

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-save me-2"></i>
                        Speichern
                    </button>
                </div>
                <div class="mt-3">
                    <a href="{{ path('app_supplier_index') }}" class="btn btn-outline-secondary">
                        <i class="fa-solid fa-arrow-left me-2"></i>
                        Zurück zur Übersicht
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
<!-- Add any supplier-specific JavaScript here -->
{% endblock %}
