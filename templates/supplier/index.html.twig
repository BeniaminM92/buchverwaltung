{% extends 'base.html.twig' %}

{% block title %}Übersicht: Händler{% endblock %}

{% block headline %}
    <div class="text-center py-4">
        <h1 class="display-4">Ihre <span class="text-success">Übersicht: Händler</span></h1>
        <p class="lead text-muted">Verwalten Sie Ihre Lieferanten auf einen Blick.</p>
    </div>
{% endblock %}

{% block body %}
    <div class="container">
        <!-- Add New Supplier Button -->
        <div class="d-flex justify-content-between align-items-center my-4">
            <h2 class="text-muted">Händler</h2>
            <a href="{{ path('app_supplier_new') }}" class="btn btn-outline-success btn-lg">
                <i class="fa-solid fa-plus me-2"></i>
                Neuen Händler hinzufügen
            </a>
        </div>

        <!-- Supplier List -->
        <ul class="list-group">
            {% for supplier in suppliers %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>{{ supplier.name }}</strong>
                        <p class="mb-0 text-muted small">{{ supplier.address }}</p>
                    </div>
                    <div>
                        <a href="{{ path('app_supplier_show', { id: supplier.id }) }}" class="btn btn-success btn-sm">
                            <i class="fa-solid fa-building me-1"></i>
                            Details
                        </a>
                    </div>
                </li>
            {% else %}
                <li class="list-group-item text-center text-muted">Keine Händler verfügbar.</li>
            {% endfor %}
        </ul>
    </div>
    <nav aria-label="...">
        <ul class="pagination">
            <li class="page-item disabled">
                <a class="page-link">Previous</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item active" aria-current="page">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>
{% endblock %}

{% block javascript %}
<!-- Add any supplier-specific JavaScript here -->
{% endblock %}
