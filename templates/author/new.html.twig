{% extends 'base.html.twig' %}

{% block title %}AutorIn Hinzufügen{% endblock %}

{% block headline %}
    <div class="text-center py-4">
        <h1 class="display-4">Neue/n <span class="text-success">AutorIn Hinzufügen</span></h1>
        <p class="lead text-muted">Füllen Sie das folgende Formular aus, um neue/n AutorIn hinzuzufügen.</p>
    </div>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.fname, 'Vorname', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.fname, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.fname) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.lname, 'Nachname', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.lname, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.lname) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.birthdate, 'Geburtsdatum', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.birthdate, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.birthdate) }}
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-save me-2"></i>
                        Speichern
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_author_index') }}" class="btn btn-outline-secondary">
                <i class="fa-solid fa-arrow-left me-2"></i>
                Zurück zur Übersicht
            </a>
        </div>
    </div>
{% endblock %}

{% block javascript %}

{% endblock %}


