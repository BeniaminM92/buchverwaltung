{#                        <i class="fa-solid fa-save me-2"></i>#}
{#                        Speichern#}
{#                    </button>#}
{#                </div>#}
                <div class="mt-3">
                    <a href="{{ path('app_book_index') }}" class="btn btn-outline-secondary">
                        <i class="fa-solid fa-arrow-left me-2"></i>
                        Zurück zur Übersicht
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

