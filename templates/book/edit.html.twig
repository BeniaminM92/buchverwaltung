{% extends 'base.html.twig' %}

{% block title %}Neues Buch Hinzufügen{% endblock %}

{% block headline %}
    <div class="text-center py-4">
        <h1 class="display-4">Neues <span class="text-success">Buch Hinzufügen</span></h1>
        <p class="lead text-muted">Füllen Sie das folgende Formular aus, um ein neues Buch hinzuzufügen.</p>
    </div>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.title, 'Titel', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.title) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.author, 'Autor', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.author) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.genre, 'Genre', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.genre, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.genre) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.pages, 'Seiten', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.pages, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.pages) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.publisher, 'Verlag', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.publisher, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.publisher) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.publisherEmail, 'Email des Verlags', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.publisherEmail, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.publisherEmail) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.publishedAt, 'Veröffentlichungsdatum', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.publishedAt, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.publishedAt) }}
                </div>

                {{ form_end(form) }}
